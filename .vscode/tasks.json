{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build RaikebVolumeCardMixer",
            "type": "shell",
            "command": "g++",
            "args": [
                "-municode",
                "-mwindows",
                "main.cpp",
                "-o",
                "RaikebVolumeCardMixer.exe",
                "-luser32",
                "-lshell32",
                "-lshlwapi",
                "-lole32",
                "-loleaut32",
                "-lwinmm",
                "-luuid",
                "-lpsapi",
                "-luxtheme",
                "-ldwmapi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}